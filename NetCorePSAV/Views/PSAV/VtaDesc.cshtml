@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using GCCorePSAV.Models
@using GCCorePSAV.Controllers.Services
@using Syncfusion.JavaScript
@using Syncfusion.MVC.EJ
@inject LoggedInComponent Lgc
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@await Lgc.IsAuth(HttpContextAccessor.HttpContext.Request.Cookies["Bearer"], HttpContextAccessor.HttpContext.Request.Cookies["pandoraRules"])
@if (Lgc.isAuth)
{
    <br />

    <form method="post" asp-action="VtaDesc" asp-controller="PSAV">
        <input type="hidden" name="Advance" id="Advance" value="0" />
        <div class="container-fluid">
            <div class="row">
                <table border="0" class="table" width="100%">
                    <thead>
                        <tr><th>Venta Descuento</th></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <ej-grid id="FlatGrid" allow-paging="true">
                                    <e-datamanager json="(IEnumerable<object>)ViewBag.datasource" update-url="VtaDctoNormalUpdate" insert-url="VtaDctoNormalInsert" remove-url="VtaDctoNormalDelete" adaptor="remoteSaveAdaptor" />
                                    <e-edit-settings allow-adding="true" allow-editing="true" allow-deleting="true" edit-mode="@(EditMode.Dialog)"></e-edit-settings>
                                    <e-toolbar-settings show-toolbar="true" toolbar-items="@(new List<string>() { "add", "edit", "delete", "update", "cancel" })"></e-toolbar-settings>
                                    <e-columns>
                                        <e-column field="Category" header-text="Categoría" validation-rules='new Dictionary<string, object>() { {"required",true} }' text-align="Right" width="75"></e-column>
                                        <e-column field="VentaEqui" header-text="Clave" validation-rules='new Dictionary<string, object>() { {"required",true}}' text-align="Right" width="75"></e-column>
                                        <e-column field="VentaEquEx" header-text="Cantidad" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' width="80"></e-column>
                                        <e-column field="TotalVenta" header-text="Dias" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' text-align="Right" width="75"></e-column>
                                        <e-column field="DesPorEq" header-text="Descripcion" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' width="80"></e-column>
                                        <e-column field="TotalDescEPS" header-text="PrecioUnit" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' text-align="Right" width="75"></e-column>
                                        <e-column field="DescExt" header-text="Categoria" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' width="80"></e-column>
                                        <e-column field="TotalExt" header-text="Dias" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' text-align="Right" width="75"></e-column>
                                        <e-column field="TotalDesc" header-text="Descripcion" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' width="80"></e-column>
                                        <e-column field="PorcTotalDesc" header-text="PrecioUnit" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' text-align="Right" width="75"></e-column>
                                        <e-column field="AplicaAut" header-text="Categoria" validation-rules='new Dictionary<string, object>() { {"required",true}, {"minlength",1} }' width="80"></e-column>
                                    </e-columns>
                                </ej-grid>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <table border="0">
            <tr><td><button type="submit" class="btn btn-default">Continuar</button></td></tr>
        </table>
    </form>
    
}
