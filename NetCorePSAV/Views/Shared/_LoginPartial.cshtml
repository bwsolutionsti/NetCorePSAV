@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using GCCorePSAV.Controllers.Services
@inject LoggedInComponent Lgc
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@await Lgc.IsAuthS(HttpContextAccessor.HttpContext.Request.Cookies["Bearer"], HttpContextAccessor.HttpContext.Request.Cookies["pandoraRules"])
@if (Lgc.isAuth)
{
    <ul class="nav navbar-nav navbar-right">

        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Hello @Lgc.UsuarioDraw!<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        @*<li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Perfil">Perfil</a></li>*@
                        <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Cerrar Sesión</button></li>
                    </ul>
            </ul>
        </form>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a></li>
    </ul>
}