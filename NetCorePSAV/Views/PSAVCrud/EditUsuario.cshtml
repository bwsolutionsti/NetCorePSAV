@using Syncfusion.JavaScript
@using Syncfusion.MVC.EJ
@using GCCorePSAV.Controllers.Services
@inject LoggedInComponent Lgc
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model GCCorePSAV.Models.PSAVCrud.SyncModels.UsersModel
@await Lgc.IsAuth(HttpContextAccessor.HttpContext.Request.Cookies["Bearer"], HttpContextAccessor.HttpContext.Request.Cookies["pandoraRules"])
@if (Lgc.isAuth)
{
    <br /><br /><br />
    <form method="post" asp-action="SaveUserEdit" asp-controller="PSAVCrud">
        <table border="0">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Contraseña</th>
                    <th>Expira</th>
                    <th>Activo</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input asp-for="Username" class="form-control" />
                    </td>
                       <td> <input asp-for="Password" class="form-control" type="password" /></td>
                       <td> <input asp-for="Expira" class="form-control" /></td>
                       <td> <input asp-for="Active" class="form-control" /></td>
                    
                </tr>
                <tr>
                    <td colspan="4">
                        <button type="submit" class="btn btn-default">Guardar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
}